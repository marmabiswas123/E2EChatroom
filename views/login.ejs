<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>E2EChatroom</title>
  <link rel="stylesheet" href="/css/login.css" />
  <style>
    #animatedText {
      text-align: center;
      font-size: 32px;
      color: rgb(10, 10, 10);
      min-height: 80px;
    }
    #animatedText::after {
      content: '|';
      animation: blink 0.7s infinite;
    }
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0; }
    }
  </style>
</head>
<body>
  <div id="loginBox">
    <h1 id="animatedText"></h1>

    <div id="errorBox"></div>
    <img src="photo.svg" width="205" height="250"/>
    <form action="/login" method="POST">
      <input type="text" name="username" size="40" placeholder="Enter UserName" id="userName" />
      <button id="submitButton" type="submit">Enter Chat</button>
    </form>
    <h3>ðŸ”’An End to End Encrypted Chat Room.</h3>
  </div>
  <script>
    const textArray = [
      "Welcome To E2EChatroom!",
      "Enjoy Chatting Securely."
    ];

    let textIndex = 0;
    let charIndex = 0;
    let currentText = "";
    let isDeleting = false;
    const speed = 100;
    const target = document.getElementById("animatedText");

    function typeEffect() {
      currentText = textArray[textIndex];

      if (isDeleting) {
        target.innerHTML = currentText.substring(0, charIndex--);
      } else {
        target.innerHTML = currentText.substring(0, charIndex++);
      }

      if (!isDeleting && charIndex === currentText.length) {
        isDeleting = true;
        setTimeout(typeEffect, 1000);
      } else if (isDeleting && charIndex === 0) {
        isDeleting = false;
        textIndex = (textIndex + 1) % textArray.length;
        setTimeout(typeEffect, 300);
      } else {
        setTimeout(typeEffect, isDeleting ? 50 : speed);
      }
    }

    typeEffect();
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script>const socket = io();</script>
</body>
</html>
